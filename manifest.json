{
    "name": "Quaestionis",
    "description": "Choose a block of text and generate 5 questions about it",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "dist/bundle.js",
        "type": "module"
    },

    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ]
    
}